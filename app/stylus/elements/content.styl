body
	margin 0 auto
	padding 0
	
	font-family Raleway, Righteous, Abel, Anton, sans-serif
	//font-size 16px
	//font-size 1rem
	//min-height 100vh
	width 100%
	min-width 300px
	//position relative

.valores
	&__header
	&__cont
		//width 100%
		//margin auto
	&__item
		margin-bottom 3em
		+above(b2)
			margin-bottom 0
		figure
			padding 0
			margin auto
			+above(b2)
				margin 0
			.valores-img
				width 120px
				margin auto
				margin-bottom 2em
				+above(b2)
					margin-bottom 0
					width 240px
				img
					border-radius 50%
			figcaption
				margin auto
				text-align center
				width 90%
				line-height 1.3
				+above(b2)
					margin-top 1em
					width 80%
					p
						line-height 2

.clientes
	&__header
		//display none
		+above(b2)
			display block

	&__cont
		margin 1em 0
		//display none
		+above(b2)
			//display flex
			padding-bottom 2em
	&__item
		margin-bottom 1em
		a
			//display flex
			img
				margin auto
				align-self center
			+above(b2)
				width 90%
	&__button
		padding 1.5em 0
		text-align center
		font-size 16px




